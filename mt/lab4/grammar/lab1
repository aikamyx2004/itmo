grammar Lab1;
@header {
}
@package = ru.ainur.lab1;

startRule: e EOF;
e: t ePrime;

ePrime
    :   PLUS t ePrime
    |   MINUS t ePrime
    |
    ;

t: f tPrime;

tPrime
    :   MULTIPLY f tPrime
    |   DIVIDE f tPrime
    |
    ;

f
    :   LPAREN e RPAREN
    |   MINUS f
    |   NUMBER
    |   FUNC f
    ;

PLUS: "\\+";
MINUS: "-";
NUMBER: "\\d+";
MULTIPLY: "\\*";
DIVIDE: "/";
FUNC: "\\w+";
LPAREN: "\\(";
RPAREN: "\\)";
